<h1>Eat-Da-Burger!</h1>



<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgersPartial devoured=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgersPartial devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Devoured Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
